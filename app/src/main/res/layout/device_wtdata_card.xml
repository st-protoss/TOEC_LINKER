<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/wt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wt_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/wt_layout"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#004997"
                    android:textSize="25dp" />

           <RadioGroup
               android:id="@+id/wt_choice"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:layout_marginTop="5dp"
               android:orientation="horizontal">
               <RadioButton
                   android:id="@+id/wt_on"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content" />
               <TextView
                   android:id="@+id/wt_on_text"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />
               <RadioButton
                   android:id="@+id/wt_off"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content" />
               <TextView
                   android:id="@+id/wt_off_text"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />
            </RadioGroup>

            <ImageView
                android:id="@+id/wt_btn_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_mode_edit"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>